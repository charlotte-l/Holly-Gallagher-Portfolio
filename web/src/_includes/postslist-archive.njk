<div class="grid grid-cols-3 gap-x-32 gap-y-28">
  {% for post in postslist %}
    {% set currentPost = post.data.post %}
    <div class="flex flex-col justify-start">
      <img class="aspect-video rounded-2xl" src="{% croppedUrlFor currentPost.mainImage, 300 %}" alt="{{ currentPost.mainImage.alt }}">
      <div class="mt-4">
        {% for category in currentPost.categories %}
          <a class="" href="/updates/{{ category.slug | slug }}">{{ category.title }}{% if not loop.last %}, {% endif %}</a>
        {% endfor %}
        <a href="{{ post.url | url }}" class="block w-fit font-display font-bold text-3xl tracking-wider mt-4">
          {{ currentPost.title }}
        </a>
      </div>
      <time class="block font-light text-sm mt-2 mb-4" datetime="{{ currentPost.publishedAt }}">{{ currentPost.publishedAt | readableDate }}</time>
      {% if currentPost.excerpt %}
        {{ currentPost.excerpt | markdownify | safe }}
      {% else %}
        {{ currentPost.body | markdownify }}
      {% endif %}
      <a href="{{ post.url | url }}" class="block w-fit">
        Read more&thinsp;&#8594;
      </a>
    </div>
  {% endfor %}
</div>